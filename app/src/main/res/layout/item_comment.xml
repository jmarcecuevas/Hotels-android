<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:id="@+id/fullNameTextView"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorAltPrimary"
        android:textStyle="italic"
        android:padding="8dp"
        android:id="@+id/goodComentTextView"
        android:drawablePadding="@dimen/mediumDimen"
        android:drawableStart="@drawable/ic_happy"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/colorAltPrimary"
            android:textStyle="italic"
            android:padding="@dimen/mediumDimen"
            android:id="@+id/badComentTextView"
            android:drawablePadding="@dimen/mediumDimen"
            android:drawableStart="@drawable/ic_sad"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorSecondary"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="@dimen/mediumDimen"
            android:layout_marginBottom="@dimen/mediumDimen">

    </View>

</LinearLayout>